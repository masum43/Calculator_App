<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="153dip" />
            <stroke android:width="1dip" android:color="@color/red_light" />
            <gradient android:angle="-90" android:startColor="@color/red_light" android:endColor="@color/red_light"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="153dip" />
            <stroke android:width="1dip" android:color="@color/red_light" />
            <solid android:color="@color/red_light"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="153dip" />
            <stroke android:width="1dip" android:color="@color/red_light" />
            <gradient android:angle="-90" android:startColor="#FF5722" android:endColor="#F44336" />
        </shape>
    </item>
</selector>