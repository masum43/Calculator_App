<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/menu_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/nav_header_margin_top"
        >
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_settings"
            android:scaleType="fitXY"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:paddingStart="@dimen/nav_header_text_padding"
            android:paddingLeft="@dimen/nav_header_text_padding"
            android:textSize="@dimen/nav_header_txt_size"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_remove_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/nav_header_margin_top"
        >
        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_no_ads"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Ads"
            android:paddingStart="@dimen/nav_header_text_padding"
            android:paddingLeft="@dimen/nav_header_text_padding"
            android:textSize="@dimen/nav_header_txt_size"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/nav_header_margin_top"
        >
        <LinearLayout
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            >
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_star"
                android:scaleType="fitXY"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating Us"
            android:paddingStart="@dimen/nav_header_text_padding"
            android:paddingLeft="@dimen/nav_header_text_padding"
            android:textSize="@dimen/nav_header_txt_size"
            />
    </LinearLayout>


</LinearLayout>